
@{
    ViewData["Title"] = "Ratings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<MatchTable>

    <div class="text-center">
        <form asp-controller="Match" asp-action="RateUser">
            <h1>Rate Your Match</h1>
            <p><i>Part of building a strong community is providing feedback.<br /> 
                Please only provide feedback on a user once you have had the oppportunity to connect and play a game together.</i></p>
            <select name="username">
                @foreach (MatchTable match in Model)
                {
                    <option value="@match.UserGet">@match.UserGet</option>
                }
            </select>
            <select name="rating">
                <option value=""></option>
                <option value="1">1 - I did not enjoy the match at all!</option>
                <option value="2">2 - I enjoyed this a little bit.</option>
                <option value="3">3 - I had a decent time with the match.</option>
                <option value="4">4 - I enjoyed this match.</option>
                <option value="5">5 - I really enjoyed this match!</option>
            </select>
            <input type="submit" />
        </form>
        
    </div>


